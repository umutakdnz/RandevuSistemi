@model List<RandevuSistemi.Models.AdminSiniflar.Price>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Fiyatlar</h1>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Hizmet Adı</th>
                <th>Açıklama</th>
                <th>Link</th>
                <th>Görsel</th>
                <th>Kategori ID</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PriceID</td>
                    <td>@item.PriceName</td>
                    <td>@item.Description</td>
                    <td>@item.PriceLink</td>
                    <td>@item.Image1</td>
                    <td>@item.CategoryID</td>
                    <td><a href="/Price/UpdatePrice/@item.PriceID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Price/DeletePrice/@item.PriceID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Price/CreatePrice/" class="btn btn-dark">Ekle</a>

</div>