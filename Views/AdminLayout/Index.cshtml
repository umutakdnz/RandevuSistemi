				</div>

			</div>
		</nav>
		<div id="content" class="p-4 p-md-5 pt-5">
			@RenderBody()
		</div>
	</div>
	@await Html.PartialAsync("~/Views/AdminLayout/PartialScript.cshtml")
</body>
</html>
