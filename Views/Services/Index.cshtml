@model List<RandevuSistemi.Models.AdminSiniflar.Services>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Hizmetler</h1>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Açıklama</th>
                <th>Hizmet Adı</th>
                <th>Simge</th>
                <th>Açıklama-2</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServicesID</td>
                    <td>@item.Description</td>
                    <td>@item.Title</td>
                    <td>@item.IconUrl</td>
                    <td>@item.Description2</td>
                    <td><a href="/Services/UpdateServices/@item.ServicesID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Services/DeleteServices/@item.ServicesID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Services/CreateServices/" class="btn btn-dark">Ekle</a>

</div>