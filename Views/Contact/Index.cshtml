@model List<RandevuSistemi.Models.AdminSiniflar.Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>İletişim Sayfası</h1>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Açıklama</th>
                <th>Adres</th>
                <th>Email</th>
                <th>Telefon Numarası</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ContactID</td>
                <td>@item.Description</td>
                <td>@item.Adress</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </table>
    <a href="/Contact/CreateContact/" class="btn btn-dark">Ekle</a>
</div>